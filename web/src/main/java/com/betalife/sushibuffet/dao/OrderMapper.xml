<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.betalife.sushibuffet.dao.OrderMapper">

	<resultMap id="orderResult" type="Order">
		<id property="id" column="id" />
		<result property="count" column="count" />
		<result property="created" column="created" />
		<result property="updated" column="updated" />
		<association property="turnover" javaType="Turnover">
			<id property="id" column="turnover_id" />
			<result property="checkout" column="checkout" />
			<result property="tableId" column="table_id" />
			<result property="takeawayId" column="takeaway_id" />
			<result property="discount" column="discount" />
		</association>
		<association property="product" javaType="Product">
			<id property="id" column="product_id" />
			<result property="categoryId" column="category_id" />
			<result property="productPrice" column="product_price" />
			<result property="thumb" column="thumb" />
			<result property="productName" column="name" />
			<result property="num" column="num" />
			<result property="productNum" column="product_num" />
			<result property="taxgroupId" column="taxgroup_id" />
		</association>
	</resultMap>

	<select id="selectOrders" parameterType="Order" resultMap="orderResult">
		SELECT o.id, o.`count`, o.turnover_id, o.product_id, t.checkout,
		o.updated,
		o.created, p.product_num, p.taxgroup_id,
		t.table_id,
		p.category_id, p.num, p.product_price, p.thumb, m.NAME
		FROM
		`order` o,
		turnover t, product p LEFT JOIN multilang m ON m.id =
		CONCAT('p', p.id)
		AND m.locale = #{locale}
		WHERE o.turnover_id = #{turnover.id}
		AND
		o.turnover_id = t.id
		AND o.product_id = p.id
		AND p.active=true
		Order by
		o.created
	</select>

	<select id="selectOrdersByDate" parameterType="map" resultMap="orderResult">
		SELECT
		o.id,
		o.`count`,
		o.turnover_id,
		o.product_id,
		o.updated,
		o.created,
		p.taxgroup_id,
		p.category_id,
		p.product_price,
		t.discount,
		t.checkout,
		t.takeaway_id,
		t.table_id
		FROM
		`order` o,
		turnover t, 
		product p
		WHERE o.turnover_id = t.id
		AND o.product_id = p.id
		AND o.created BETWEEN #{from}
		AND #{to}
	</select>

	<insert id="insertOrder" parameterType="Order" useGeneratedKeys="true"
		keyProperty="id">
		INSERT INTO `order`
		(turnover_id, product_id, `count`,
		created)
		VALUES
		(#{turnover.id}, #{product.id}, #{count}, #{created})
	</insert>

	<update id="updateCount" parameterType="Order">
		UPDATE `order`
		SET
		`count`=#{count}, updated=NOW()
		WHERE id=#{id}
	</update>
	
	<delete id="delete" parameterType="Order">
		DELETE FROM `order`
		WHERE
		turnover_id=#{turnover.id}
	</delete>

</mapper>