<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.betalife.sushibuffet.dao.DiningtableMapper">

  <cache />

  <update id="updateDiningtable" parameterType="Diningtable">
    UPDATE diningtable
    SET available = #{available},
     turnover_id = #{turnoverId}
    WHERE id = #{id}
  </update>
  
  	<select id="selectAvailableTables" resultType="Diningtable">
		select *
		from diningtable
		where available = 0
	</select>

</mapper>