<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.betalife.sushibuffet.dao.ProductsMapper">

	<cache />

	<select id="selectByCategoryId" parameterType="int" resultType="Products">
		select *
		from products
		where category_id=#{id}
	</select>

	<select id="selectById" parameterType="int" resultType="Products">
		select *
		from products
		where id=#{id}
	</select>

	<select id="selectAll" resultType="Products">
		select *
		from products
	</select>

</mapper>