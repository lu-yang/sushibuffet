<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.betalife.sushibuffet.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Dodoro" >
        <activity
            android:name="com.betalife.sushibuffet.activity.AccessActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Start" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.betalife.sushibuffet.activity.OpenTableActivity"
            android:configChanges="locale"
            android:label="@string/title_activity_new_table"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.betalife.sushibuffet.activity.MainActivity"
            android:configChanges="locale|orientation|keyboardHidden"
            android:label="@string/title_activity_main"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>
        <activity
            android:name="com.betalife.sushibuffet.activity.ChangeTableActivity"
            android:configChanges="locale"
            android:label="@string/title_activity_setting"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.betalife.sushibuffet.activity.TakeAwayActivity"
            android:configChanges="locale"
            android:label="@string/lbl_takeaway"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>