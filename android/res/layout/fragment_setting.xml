<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/settingPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="@string/setting_activity_title"
        android:textColor="@color/dodoro"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:textSize="18sp" />

    <GridView
        android:id="@+id/setting_fragment_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="450dp"
        android:gravity="center"
        android:horizontalSpacing="10pt"
        android:numColumns="auto_fit"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="40dp"
        android:verticalSpacing="10pt" />

</LinearLayout>