                android:text="@string/letterS" />

            <Button
                android:id="@+id/letterD"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/letterD" />

            <Button
                android:id="@+id/letterF"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/letterF" />

            <Button
                android:id="@+id/letterG"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/letterG" />

            <Button
                android:id="@+id/letterH"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/letterH" />

            <Button
                android:id="@+id/letterJ"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/letterJ" />

            <Button
                android:id="@+id/letterK"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/letterK" />

            <Button
                android:id="@+id/letterL"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/letterL" />

            <Button
                android:id="@+id/letterColon"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/letterColon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <Button
                android:id="@+id/letterZ"
                style="@style/button_text"
                android:layout_width="70dp"
