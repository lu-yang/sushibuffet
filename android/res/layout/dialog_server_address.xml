                android:text="@string/letterN" />

            <Button
                android:id="@+id/letterM"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/letterM" />

            <Button
                android:id="@+id/letterDot"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/letterDot" />

            <Button
                android:id="@+id/letterSlash"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/letterSlash" />

            <Button
                android:id="@+id/backspace"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/backspace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <Button
                android:id="@+id/http"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/http" />

            <Button
                android:id="@+id/www"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/www" />

            <Button
                android:id="@+id/com"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/com" />

            <Button
                android:id="@+id/clear"
                style="@style/button_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/clear" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>