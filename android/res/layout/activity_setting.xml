<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg" 
     android:orientation="vertical" >
<LinearLayout
      android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:orientation="vertical"
     >
    <TextView
        android:id="@+id/settingPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"
        android:textColor="@color/dodoro"
        android:text="@string/setting_activity_title" 
        android:layout_gravity="center"/>
   <TextView
            android:id="@+id/table_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" 
            android:layout_gravity="center"/>
 </LinearLayout>   
 <LinearLayout
      android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     android:orientation="vertical"
    android:gravity="center">
    <Button
        android:id="@+id/btn_ChangeTable"
        style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:clickable="true"
        android:onClick="changeTable"
        android:text="@string/setting_activity_change_table" 
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_Finished"
        style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:clickable="true"
        android:onClick="checkout"
        android:text="@string/setting_activity_checkout" 
    	android:padding="10dp"
    	android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btn_printOrders"
        style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:clickable="true"
        android:onClick="printOrders"
        android:text="@string/setting_activity_printOrders" 
        android:padding="10dp"
        android:layout_marginBottom="10dp" />
    
  </LinearLayout>
</LinearLayout> <!-- </FrameLayout> -->
